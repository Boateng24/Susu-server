{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./templates/*.hbs",
        "outDir": "dist"
      },
      {
        "include": "./styles/*.css",
        "outDir": "dist"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
  
}
